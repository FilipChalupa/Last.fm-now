doctype html
block vars
	- var title = global.title
	- var description = 'Now playing screen.'

html(lang="en")
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		meta(name='viewport', content='width=device-width,initial-scale=1')

		title=title

		meta(name='description', content=description)
		meta(name='author', content='Filip Chalupa <chalupa.filip@gmail.com>')

		link(rel='icon', type='image/png' href='images/favicon.png', sizes='16x16')
		link(rel='icon', type='image/png' href='images/favicon-32x32.png', sizes='32x32')

		link(rel='stylesheet', href='styles/#{buildstamp}index.css', media='screen')

		// Queue of JS components to initialize
